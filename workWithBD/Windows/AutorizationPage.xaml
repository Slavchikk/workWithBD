<Page x:Class="workWithBD.Windows.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:workWithBD.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <StackPanel Margin="100">
            <Label HorizontalAlignment="Center"   Style="{StaticResource LabelStyle}" >Авторизация</Label>
            <GroupBox HorizontalAlignment="Center" Header="Введите логин">
                <TextBox Width="150" Name="TbLoginAvto" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Center" Header="Введите пароль">
                <PasswordBox  Width="150" Name="TbPasAvto" />
            </GroupBox>
            <Button Width="100"  Template="{StaticResource CTButon}" Click="Btn_auto" Name="Btn">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
